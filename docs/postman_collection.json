  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Automatically extract and set API token from OTP verification response",
          "if (pm.request.url.path.includes('auth') && pm.request.url.path.includes('verify')) {",
          "    const responseJson = pm.response.json();",
          "    ",
          "    if (responseJson && responseJson.token) {",
          "        pm.collectionVariables.set('api_token', responseJson.token);",
          "        console.log('API token automatically set:', responseJson.token.substring(0, 20) + '...');",
          "    }",
          "}"
        ]
      }
    }
